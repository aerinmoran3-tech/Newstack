# Example environment variables for Newstack
# Copy this file to .env and fill values locally (do NOT commit secrets)

# Server
PORT=5000
SERVER_PORT=5000
SESSION_SECRET=your_session_secret_here
ALLOWED_ORIGINS=http://localhost:5000,http://127.0.0.1:5000
PRODUCTION_DOMAIN=

# Database / ORM
DATABASE_URL=postgres://user:password@localhost:5432/dbname

# Supabase (frontend uses VITE_ prefixed keys)
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
VITE_SUPABASE_URL=https://your-supabase-url.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key

# Imagekit
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_ENDPOINT=https://ik.imagekit.io/your_account

# Email / SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=no-reply@example.com

# Optional third-party keys
STORAGE_PROVIDER_URL=
STORAGE_PROVIDER_KEY=
